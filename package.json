{
  "name": "ndiot-device-shadow",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist/shadows",
    "watch": "npm run clean && webpack --watch --progress",
    "test:clean": "rimraf ./dist/test",
    "test:watch": "npm run test:clean && cross-env NODE_MODULE=test webpack --watch --progress --env cjs2",
    "nr:clean": "rimraf ./dist/node-red",
    "nr:watch": "npm run nr:clean && cross-env NODE_MODULE=node-red webpack --watch --progress --env cjs2",
    "amd:clean": "rimraf ./dist/node-red/amd",
    "amd:watch": "npm run amd:clean && cross-env NODE_MODULE=device-amd  webpack --watch --progress --env cjs",
    "test": "rimraf ./out && tsc --outDir ./out && mocha ./out/test ",
    "coverage:clean": "rimraf ./docs/coverage",
    "coverage:html": "nyc --reporter html --reporter text --report-dir ./docs/coverage npm run test ",
    "coverage:txt": "nyc   mocha ./out/test >> ./docs/coverage/mocha-coverage.txt",
    "coverage": "npm run coverage:clean && npm run coverage:html && npm run coverage:txt ",
    "eslint:html": "eslint ./src -f node_modules/eslint-html-reporter/reporter.js -o ./docs/eslint/report.html || echo '' ",
    "eslint": "npm run eslint:html && eslint ./src ",
    "typedoc": "typedoc --out docs/typedoc src/device/*.ts "
  },
  "author": "CZQ",
  "license": "ISC",
  "dependencies": {
    "@types/iconv-lite": "^0.0.1",
    "@types/is-utf8": "^0.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.0.5",
    "@types/node-red": "^1.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint-html-reporter": "^0.7.4",
    "fs.notify": "^0.0.4",
    "iconv-lite": "^0.6.3",
    "is-utf8": "^0.2.1",
    "js-yaml": "^4.1.0",
    "mongodb": "^4.8.1",
    "mqtt": "^4.3.7",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-plugin-react": "^7.31.11",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "typedoc": "^0.23.21"
  }
}
